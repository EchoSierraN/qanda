<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:maxWidth="348dp"
    android:layout_width="348dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="348dp"
        android:layout_height="132dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/question_background" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/placeholder"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="348dp"
        android:layout_height="300dp"
        android:background="@drawable/choices_background"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btn_choice1"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:maxHeight="60dp"
        android:layout_marginTop="8dp"
        android:text="Lorem ipsum dolor sit amet, consetetur "
        android:textSize="16sp"
        android:fontFamily="@font/roboto"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/btn_choice2"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:maxHeight="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:fontFamily="@font/roboto"
        android:text="Lorem ipsum dolor sit amet, "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choice1" />

    <Button
        android:id="@+id/btn_choice3"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:maxHeight="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:fontFamily="@font/roboto"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choice2" />

    <Button
        android:id="@+id/btn_choice4"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:maxHeight="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:fontFamily="@font/roboto"
        android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choice3" />

</androidx.constraintlayout.widget.ConstraintLayout>